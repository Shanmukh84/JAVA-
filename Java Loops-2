import java.util.*;

class Solution {
    public static void main(String []argh) {
        Scanner in = new Scanner(System.in);
        int t = in.nextInt();
        
        for (int i = 0; i < t; i++) {
            int a = in.nextInt();
            int b = in.nextInt();
            int n = in.nextInt();
            
            int currentSum = a;
            for (int j = 0; j < n; j++) {
                // Calculate 2^j * b using bit shifting (1 << j) for efficiency
                currentSum += (Math.pow(2, j) * b);
                System.out.print(currentSum + " ");
            }
            // Move to a new line after each query's series is printed
            System.out.println();
        }
        in.close();
    }
}
